<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="1000dp">

        <Switch
            android:id="@+id/switch_first_sim"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="43dp"
            android:text="Статус" />

        <TextView
            android:id="@+id/frequency_requests_first_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sim_first_id"
            android:layout_alignStart="@+id/sim_first_id"
            android:layout_below="@+id/switch_first_sim"
            android:layout_marginTop="217dp"
            android:text="Частота запросов " />

        <EditText
            android:id="@+id/frequency_requests_first_sim_edit_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/frequency_requests_first_sim"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/frequency_sent_sms_first_sim"
            android:layout_toRightOf="@+id/frequency_sent_sms_first_sim"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/frequency_sent_sms_first_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/frequency_requests_first_sim"
            android:layout_alignStart="@+id/frequency_requests_first_sim"
            android:layout_below="@+id/frequency_requests_first_sim"
            android:layout_marginTop="33dp"
            android:text="Периодичность отправки "
            android:textSize="14sp" />

        <EditText
            android:id="@+id/frequency_sent_sms_first_sim_edit_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/frequency_sent_sms_first_sim"
            android:layout_alignStart="@+id/frequency_requests_first_sim_edit_text"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/sim_first_id_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sim_first_id"
            android:layout_alignEnd="@+id/secret_key_first_sim_edit"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/sim_first_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/url_first_sim_edit"
            android:layout_alignStart="@+id/switch_first_sim"
            android:layout_marginBottom="14dp"
            android:text="SIM ID" />

        <TextView
            android:id="@+id/secret_key_first_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/frequency_requests_first_sim_edit_text"
            android:layout_alignStart="@+id/frequency_requests_first_sim"
            android:text="SecretKey" />

        <EditText
            android:id="@+id/secret_key_first_sim_edit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/frequency_requests_first_sim_edit_text"
            android:layout_toEndOf="@+id/frequency_requests_first_sim"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/url_first_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/secret_key_first_sim_edit"
            android:layout_alignStart="@+id/secret_key_first_sim"
            android:text="URL" />

        <EditText
            android:id="@+id/url_first_sim_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/secret_key_first_sim_edit"
            android:layout_toEndOf="@+id/secret_key_first_sim"
            android:ems="10"
            android:inputType="textUri" />

        <Button
            android:id="@+id/button_save_test_settings_first_sim"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:background="@android:color/holo_blue_light"
            android:text="Сохранить"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_id_first_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sim_first_id_edit"
            android:layout_alignLeft="@+id/sim_first_id"
            android:layout_alignStart="@+id/sim_first_id"
            android:text="DEVICE ID" />

        <EditText
            android:id="@+id/device_id_first_sim_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sim_first_id_edit"
            android:layout_alignLeft="@+id/sim_first_id_edit"
            android:layout_alignStart="@+id/sim_first_id_edit"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frequency_sent_sms_first_sim"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:text="Самотестирование"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/frequency_alert_first_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Частота алертов"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/numbers_alerts_first_sim"
            android:layout_alignStart="@+id/numbers_alerts_first_sim"
            android:layout_marginTop="26dp" />

        <TextView
            android:id="@+id/numbers_alerts_first_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номера для алертов "
            android:layout_below="@+id/frequency_alert_first_sim"
            android:layout_alignRight="@+id/switch_first_sim"
            android:layout_alignEnd="@+id/switch_first_sim"
            android:layout_marginTop="26dp" />

        <TextView
            android:id="@+id/mail_first_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/numbers_alerts_first_sim"
            android:layout_alignStart="@+id/numbers_alerts_first_sim"
            android:layout_below="@+id/numbers_alerts_first_sim"
            android:layout_marginTop="32dp"
            android:text="Почтовый ящик" />

        <TextView
            android:id="@+id/login_first_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/password_first_sim"
            android:layout_alignStart="@+id/password_first_sim"
            android:layout_below="@+id/mail_first_sim"
            android:layout_marginTop="35dp"
            android:text="Логин для почты " />

        <TextView
            android:id="@+id/password_first_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/port_sim_first"
            android:layout_alignStart="@+id/port_sim_first"
            android:layout_below="@+id/login_first_sim"
            android:layout_marginTop="34dp"
            android:text="Пароль для почты " />

        <TextView
            android:id="@+id/port_sim_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/max_number_errors_first_sim"
            android:layout_alignStart="@+id/max_number_errors_first_sim"
            android:layout_below="@+id/password_first_sim"
            android:layout_marginTop="38dp"
            android:text="SMTP порт " />

        <TextView
            android:id="@+id/max_number_errors_first_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/max_numbers_messages_first_sim"
            android:layout_alignStart="@+id/max_numbers_messages_first_sim"
            android:layout_below="@+id/port_sim_first"
            android:layout_marginTop="34dp"
            android:text="Максимальное число ошибок" />

        <TextView
            android:id="@+id/max_numbers_messages_first_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/frequency_alert_first_sim"
            android:layout_alignStart="@+id/frequency_alert_first_sim"
            android:layout_below="@+id/max_number_errors_first_sim"
            android:layout_marginTop="28dp"
            android:text="Максимальное число сообщений" />

        <TextView
            android:id="@+id/time_messages_first_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/max_numbers_messages_first_sim"
            android:layout_alignStart="@+id/max_numbers_messages_first_sim"
            android:layout_below="@+id/max_numbers_messages_first_sim"
            android:layout_marginTop="30dp"
            android:text="Время оценки сообщений" />

        <EditText
            android:id="@+id/frequency_alert_first_sim_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/numbers_alerts_first_sim_edit"
            android:layout_alignLeft="@+id/numbers_alerts_first_sim_edit"
            android:layout_alignStart="@+id/numbers_alerts_first_sim_edit"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/numbers_alerts_first_sim_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frequency_alert_first_sim"
            android:layout_toEndOf="@+id/max_number_errors_first_sim"
            android:layout_toRightOf="@+id/max_number_errors_first_sim"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/mail_first_sim_edit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mail_first_sim"
            android:layout_alignEnd="@+id/max_numbers_messages_first_sim_edit"
            android:layout_alignRight="@+id/max_numbers_messages_first_sim_edit"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/login_first_sim_edit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/login_first_sim"
            android:layout_alignLeft="@+id/mail_first_sim_edit"
            android:layout_alignStart="@+id/mail_first_sim_edit"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/password_first_sim_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/password_first_sim"
            android:layout_alignLeft="@+id/port_sim_first_edit"
            android:layout_alignStart="@+id/port_sim_first_edit"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/port_sim_first_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/port_sim_first"
            android:layout_toEndOf="@+id/max_number_errors_first_sim"
            android:layout_toRightOf="@+id/max_number_errors_first_sim"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/max_number_errors_first_sim_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/max_number_errors_first_sim"
            android:layout_toEndOf="@+id/max_numbers_messages_first_sim"
            android:layout_toRightOf="@+id/max_numbers_messages_first_sim"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/max_numbers_messages_first_sim_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/max_numbers_messages_first_sim"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/button_save_test_settings_first_sim"
            android:layout_toRightOf="@+id/button_save_test_settings_first_sim"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/time_messages_first_sim_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/time_messages_first_sim"
            android:layout_toEndOf="@+id/max_number_errors_first_sim"
            android:layout_toRightOf="@+id/max_number_errors_first_sim"
            android:ems="10"
            android:inputType="number" />

    </RelativeLayout>
</ScrollView>